<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SizeActivityLight"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/groupScreenTimeout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/fifteenSeconds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:button="@null"
            android:drawableEnd="@android:drawable/btn_radio"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="start|center_vertical"
            android:text="@string/fifteenSeconds" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/thirtySeconds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:button="@null"
            android:drawableEnd="@android:drawable/btn_radio"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="start|center_vertical"
            android:text="@string/thirtySeconds" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/oneMinute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:button="@null"
            android:drawableEnd="@android:drawable/btn_radio"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="start|center_vertical"
            android:text="@string/oneMinute" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <RadioButton
            android:id="@+id/twoMinutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:button="@null"
            android:drawableEnd="@android:drawable/btn_radio"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="start|center_vertical"
            android:text="@string/twoMinutes" />
    </RadioGroup>

</ScrollView>