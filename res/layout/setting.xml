<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SizeActivityDark"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout style="@style/MenuBar" 
            android:gravity="center">

            <ImageView
                android:id="@+id/iconSettingBar"
                style="@style/ImageMenuBar"
                android:contentDescription="@string/titleBarSetting"
                android:src="@drawable/setting" />

            <TextView
                android:id="@+id/settingBar"
                style="@style/NameMenuBar"
                android:layout_toEndOf="@+id/iconSettingBar"
                android:layout_toRightOf="@+id/iconSettingBar"
                android:gravity="center_horizontal"
                android:text="@string/titleBarSetting" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/ItemSetting"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titleBluetooth"
                    style="@style/ItemTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:drawableLeft="@drawable/bluetooth"
                    android:drawableStart="@drawable/bluetooth"
                    android:text="@string/titleBluetooth" />

                <ToggleButton
                    android:id="@+id/stateBluetooth"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="7"
                    android:checked="true"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <LinearLayout
                style="@style/ItemSetting"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/titleBrightness"
                    style="@style/ItemTextView"
                    android:drawableLeft="@drawable/brightness"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/brightness"
                    android:text="@string/titleBrightness" />

                <SeekBar
                    android:id="@+id/settingBrightness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="50" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:id="@+id/screenTimeout"
                style="@style/ItemSetting"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/titleScreenTimeout"
                    style="@style/ItemTextView"
                    android:drawableLeft="@drawable/sleep"
                    android:drawableStart="@drawable/sleep"
                    android:text="@string/titleScreenOffTimeout" />

                <TextView
                    android:id="@+id/choiceTimeout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/oneMinute"
                    android:textColor="#7a7a7a" />
            </LinearLayout>

             <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />
             
            <LinearLayout
                android:id="@+id/screenPedometerSetting"
                style="@style/ItemSetting"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/reset"
                    style="@style/ItemTextView"
                    android:drawableLeft="@drawable/sleep"
                    android:drawableStart="@drawable/sleep"
                    android:text="@string/reset" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/language"
                style="@style/ItemTextView"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/about"
                android:drawableStart="@drawable/about"
                android:text="@string/language" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/about"
                style="@style/ItemTextView"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/about"
                android:drawableStart="@drawable/about"
                android:text="@string/about" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/restart"
                style="@style/ItemTextView"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/restart"
                android:drawableStart="@drawable/restart"
                android:text="@string/restart" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>