<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerscrollCall"
    style="@style/SizeActivityLight"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/MenuBar" 
        android:gravity="center">

        <ImageView
            android:id="@+id/iconBarCall"
            style="@style/ImageMenuBar"
            android:contentDescription="@string/stateCall"
            android:src="@drawable/iconbarcall" /> 

        <TextView
            android:id="@+id/nameBarCall"
            style="@style/NameMenuBar"
            android:layout_toEndOf="@id/iconBarCall"
            android:layout_toRightOf="@id/iconBarCall"
            android:text="@string/all_call" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >
    </ListView>

</LinearLayout>